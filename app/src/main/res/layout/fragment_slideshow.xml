<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pix"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="if you wanted to kmow more about seraching and sorting techniques ..."
            android:textColor="#AD1457"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/Search"
            android:layout_width="245dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:autoLink="web"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/serach" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(click on the above image to view the pdf related to searching and sorting techniques)"
            android:textColor="#101010"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Email me..."
            android:textStyle="bold"
            app:backgroundTint="#F1ACCA" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(If you want the whole pdf then click on the below image..)"
            android:textColor="#1E1B1B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/pdf"
            android:layout_width="280dp"
            android:layout_height="355dp"
            android:layout_gravity="center"
            android:autoLink="web"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/paper" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </LinearLayout>
</ScrollView>