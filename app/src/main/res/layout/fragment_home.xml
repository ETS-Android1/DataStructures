<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Homelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/email"
    android:orientation="horizontal"
    tools:context="data.manu.myapplication.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Introduction"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#F8B7D3" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Algorithms"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#9CD7FA" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:baselineAligned="false"
            android:text="Arrays"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#EFD3A6" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="LinkedList"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#CBBCF8" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Stacks"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#F4AEAE" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Queues"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#C7F6CA" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Trees"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#E8E787" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Graphs"
            android:textColor="#100F0F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#9EECE2" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />


        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />
    </LinearLayout>
</ScrollView>